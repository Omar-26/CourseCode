<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="683.0" prefWidth="960.0" style="-fx-background-color: #1F1E2C;"
      xmlns="http://javafx.com/javafx/21" fx:controller="controller.ResultController">
    <children>
        <Label alignment="CENTER" prefHeight="120.0" prefWidth="343.0" text="Result" textAlignment="CENTER"
               textFill="WHITE">
            <font>
                <Font name="System Bold" size="65.0"/>
            </font>
        </Label>
        <Label fx:id="totalScore" alignment="CENTER" prefHeight="35.0" prefWidth="203.0" text="Your total Score is"
               textFill="#2780ff">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <Label fx:id="marks" alignment="CENTER" prefHeight="142.0" prefWidth="257.0" text="3/5" textFill="WHITE">
            <font>
                <Font name="System Bold" size="110.0"/>
            </font>
        </Label>
        <Region prefHeight="38.0" prefWidth="960.0"/>
        <Label fx:id="passOrFail" alignment="CENTER" prefHeight="35.0" prefWidth="370.0"
               text="Congratulations You have passed" textFill="#2780ff">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <Region prefHeight="41.0" prefWidth="960.0"/>
        <Button fx:id="startBtn" mnemonicParsing="false" onAction="#endQuiz" prefHeight="51.0" prefWidth="278.0"
                style="-fx-background-radius: 100; -fx-background-color: #2780FF;" text="End Quiz"
                textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="System Bold" size="29.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </children>
</VBox>
